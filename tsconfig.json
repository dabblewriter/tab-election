{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "allowJs": true,
    "baseUrl": "src",
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": ["src"]
}